{
  "compilerOptions": {
    "outDir": "./build",
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "src/app/types/global.d.ts"
  ]
}